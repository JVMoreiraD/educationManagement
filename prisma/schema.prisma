// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Schools {
    id       String     @id @default(uuid())
    name     String
    address  String
    Teachers Teachers[]
    Students Students[]
    Classes  Classes[]

    @@map("schools")
}

model Teachers {
    id        String    @id @default(uuid())
    name      String
    school    Schools   @relation(fields: [school_id], references: [id])
    school_id String
    Classes   Classes[]

    @@map("teachers")
}

model Students {
    id           String   @id @default(uuid())
    name         String
    registration String
    school       Schools  @relation(fields: [schools_id], references: [id])
    schools_id   String
    Classes      Classes? @relation(fields: [classesId], references: [id])
    classesId    String?

    @@map("students")
}

model Classes {
    id          String     @id @default(uuid())
    grade       Int
    shift       String
    description String
    school      Schools    @relation(fields: [school_id], references: [id])
    school_id   String
    students    Students[]
    teacher     Teachers   @relation(fields: [teacher_id], references: [id])
    teacher_id  String

    @@map("classes")
}
